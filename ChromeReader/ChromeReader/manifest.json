{
	"name": "Chrome Reader",
	"version": "0.2.1",
	"icons": 
	{ 
		"48": "icons/logo.png"
	},
	
	"background_page": "background.html",
	
	"content_scripts":
	[
		{ "matches": [ "http://*/*" ], "js": [ "content_script.js" ] }
	],
	
	"page_action":
	{
		"popup": "popup.html",
		"type": "tab"
	},
	
	"permissions": [ "tabs", "http://www.google.com/reader/*" ],
	
	"update_url": "http://chromereader.googlecode.com/svn/update/updates.xml"
}