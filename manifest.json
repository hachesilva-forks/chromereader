{
	"name": "Chrome Reader",
	"version": "0.3",
	"icons": 
	{ 
		"48": "png/logo.png"
	},
	
	"background_page": "background.html",
	
	"content_scripts":
	[
		{ 
			"js": [ "js/content_script.js" ], 
			"matches": [ "http://*/*", "https://*/*", "file://*/*" ]
		}
	],
	
	"page_action":
	{
		"default_icon": "png/page_action.png",
		"default_title": "Chrome Reader",
	
		"popup": "popup.html",
		"type": "tab"
	},
	
	"default_locale": "en",
	"permissions": [ "tabs", "http://www.google.com/reader/*" ],
	"update_url": "http://chromereader.googlecode.com/svn/update/updates.xml"
}